<div class="data-form">
    <form method="POST" action="/courses/create">
        <h2>Fill in the course details:</h2>
        <label for="inputTitle">Title</label>
        <input type="text" name="title" id="inputTitle" placeholder="Title" required autofocus>
        <label for="inputDescription">Description</label>
        <input type="text" name="description" id="inputDescription" placeholder="Description" required>
        <label for="inputMaxStudents">Max. students</label>
        <input type="number" name="maxStudents" id="inputMaxStudents" pattern="^(\d)$" placeholder="Max. students" required>
        <label for="inputCost">Cost</label>
        <input type="number" name="cost" id="inputCost" pattern="^(\d)$" placeholder="Cost" required>
        <button type="submit">Create</button>
    </form>
</div>

<div class="data-form">
    <form method="POST" action="/courses/<%= course._id %>/update?_method=PUT">
        <h2>Modify an existing course:</h2>
        <label for="inputTitle">Title</label>
        <input type="text" name="title" id="inputTitle" value="<%= course.title %>" placeholder="Title" required autofocus>
        <label for="inputDescription">Description</label>
        <input type="text" name="description" id="inputDescription" value="<%= course.description %>" placeholder="Description" required>
        <label for="inputMaxStudents">Max. students</label>
        <input type="number" name="maxStudents" id="inputMaxStudents" value="<%= course.maxStudents %>" pattern="^(\d)$" placeholder="Max. students" required>
        <label for="inputCost">Cost</label>
        <input type="number" name="cost" id="inputCost" value="<%= course.cost %>" pattern="^(\d)$" placeholder="Cost" required>
        <button type="submit">Save</button>
    </form>
</div>
